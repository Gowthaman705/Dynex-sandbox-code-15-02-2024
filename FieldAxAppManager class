    Public Static void updateActiveContractNumber(list<fax__job__c> JobRecord)
    {
        List<id> InstallBaseId = new List<id>();
        date PlannedDateTime;
        Map<Id,Contract_Coverage__c> installBaseWithCoverageMap = new Map<id,Contract_Coverage__c>();
        List<fax__Job__c> UpdateJoblist = new List<fax__job__c>();
        
        for(fax__job__c job: JobRecord)
        {
            if(job.Install_base__c != null)
                InstallBaseId.add(job.Install_base__c);
            
            PlannedDateTime = Date.valueOf(job.fax__Planned_Visit_Date_Time__c); 
        }
        List<Contract_Coverage__c> ContractCov = [Select id,Name,Install_base__c,Contract_End_Date__c,ContractName__c,Contract_State__c From Contract_Coverage__c Where Install_base__c =: InstallBaseId And Contract_State__c = 'Active' And Contract_End_Date__c >: PlannedDateTime];
        
        if(ContractCov.size() > 0)
            for(Contract_Coverage__c cntCoverage : ContractCov )
        {
            installBaseWithCoverageMap.put(cntCoverage.Install_base__c,cntCoverage);
        }
        
        if(!ContractCov.isEmpty())
        {
            for(fax__Job__c job : JobRecord)
            {
                if(installBaseWithCoverageMap.containskey(job.Install_base__c))
                {
                    fax__job__c jobvar = new fax__job__c();
                    jobvar.id = job.id;
                    jobvar.Active_Contract_Number__c = installBaseWithCoverageMap.get(job.Install_base__c).ContractName__c;
                    jobvar.Contract_Expire_Date1__c = installBaseWithCoverageMap.get(job.Install_base__c).Contract_End_Date__c;
                    UpdateJoblist.add(jobvar);
                }
            }
            if(UpdateJoblist.size() > 0)
                FieldAxDBManager.UpdateDBValue(UpdateJoblist);
            
        }    
    } 
    
