    Public Static void SendEmail(List<String> toAddress,String Subject, String Content)
    {
        
        Messaging.SingleEmailMessage email = new Messaging.SingleEmailMessage();
        email.ToAddresses = toAddress;
        email.setCcAddresses(new String[] {'salesforcetestwork@gmail.com'});
        String emailBody = 'Dear Service Engineer,\n\n'
            +Content;
        email.setSubject(Subject);
        email.setPlainTextBody(emailBody);
        Messaging.SendEmailResult[] results = Messaging.sendEmail(new Messaging.SingleEmailMessage[] {email});
        if (results[0].isSuccess()) 
        {
            System.debug('Email sent successfully');
        } 
        else 
        {
            System.debug('Email sending failed: ' + results[0].getErrors()[0].getMessage());
        }
        
    }
    public static void SendCustomNotification(String Tittle,String Notes,id JobId,List<id> OwnerID)
    {
        CustomNotificationType notificationType = [SELECT Id, DeveloperName FROM CustomNotificationType WHERE DeveloperName='Comments_Notification'];
        
        Messaging.CustomNotification notification = new Messaging.CustomNotification();
        notification.setTitle(Tittle);
        notification.setBody(Notes);
        notification.setNotificationTypeId(notificationType.Id);
        notification.setTargetId(JobId);
        Set<String> addressee = new Set<String>();
        for(id owner : OwnerID){
            addressee.add(owner);
        }
        try {
            notification.send(addressee);
        }
        catch (Exception e) {
            System.debug('Problem sending notification: ' + e.getMessage());
        }
    }
