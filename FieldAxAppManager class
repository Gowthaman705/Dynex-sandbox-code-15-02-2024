    Public Static Void updateSummary(List<fax__Job_System__c> newJobItemValues)
    {   
        Set<id> JobId = new Set<id>();
        Decimal LaborPart = 0;
        Decimal TravelPart = 0;
        Decimal LaborPrice = 0;
        Decimal TravelPrice = 0;
        
        List<fax__job__c> JobListUpdate = new List<fax__job__c>();
        
        For(fax__Job_System__c jobItem : newJobItemValues)
        {
            JobId.add(jobItem.fax__Job_New__c);
        }
        
        List<AggregateResult> LaborResult = [SELECT SUM(Part_Cost__c) travelPart, SUM(fax__Unit_Price__c) travelPrice FROM fax__Job_System__c WHERE (fax__Job_New__c = :jobID) AND fax__Billable__c = true AND  (fax__Product__r.Name LIKE '%Labor%')];
        List<AggregateResult> TravelResult = [SELECT SUM(Part_Cost__c) laborPart, SUM(fax__Unit_Price__c) laborPrice FROM fax__Job_System__c WHERE (fax__Job_New__c = :jobID)AND fax__Billable__c = true AND (fax__Product__r.Name LIKE '%Travel%')];
        
        // Labore Product Cose and Price
        IF(LaborResult[0].get('travelPrice') != null)
        {
            LaborPrice += (Decimal)LaborResult[0].get('travelPrice');
        }
        if(LaborResult[0].get('travelPart') != null)
        {
            LaborPart += (Decimal)LaborResult[0].get('travelPart');
        } 
        // Travel Cost And Price
        IF(TravelResult[0].get('laborPart') != null)
        {
            TravelPart += (Decimal)TravelResult[0].get('laborPart');
        }
        if(TravelResult[0].get('laborPrice') != null)
        {
            TravelPrice += (Decimal)TravelResult[0].get('laborPrice');
        } 
        List<fax__job__c> jobRecords = [Select id,Name,Travel_cost__c,Travel_Price__c,Part_Cost__c,Parts_Price__c,Labor_Cost__c,Labor_Price__c From fax__job__c Where id =: JobId AND fax__Status__c != 'Completed'];
        For(fax__job__c job : jobRecords)
        {
            fax__job__c jobVar = new fax__job__c();
            jobVar.id = job.id;
            jobVar.Labor_Cost__c = LaborPart;
            jobVar.Labor_Price__c = LaborPrice;
            jobVar.Travel_cost__c    = TravelPart;
            jobVar.Travel_Price__c = TravelPrice;
            JobListUpdate.add(jobVar);
        }
        if(JobListUpdate.size() > 0)
            FieldAxDBManager.UpdateDBValue(JobListUpdate);        
    }
    
    Public Static List<fax__Job__c> Assignmenttimeupadte(List<fax__Assigned_Engineer__c> Assignt){
        
        if(Assignt.size() > 0){
            update Assignt;
        }
        return null;
        
    }
    
    // To update the PM Date to Install base
    public static void updateLastPmdate(List<fax__Job__c> newJobs, Map<Id, fax__Job__c> oldJobMap) {
        Set<Id> installBaseIds = new Set<Id>();
        List<InstallBase__c> installBasesToUpdate = new List<InstallBase__c>();

         for (fax__Job__c job : newJobs) {
            if (job.fax__Status__c == 'completed' && 
                oldJobMap.containsKey(job.Id) && 
                oldJobMap.get(job.Id).fax__Status__c != 'completed' && 
                job.fax__Visit_Type__c == 'Preventative Maintenance') {
                installBaseIds.add(job.Install_base__c);
            }
        }

         Map<Id, InstallBase__c> installBaseMap = new Map<Id, InstallBase__c>(
            [SELECT Id, Last_PM_Date__c FROM InstallBase__c WHERE Id IN :installBaseIds]
        );

         for (fax__Job__c job : newJobs) {
            if (job.fax__Status__c == 'completed' && 
                oldJobMap.containsKey(job.Id) && 
                oldJobMap.get(job.Id).fax__Status__c != 'completed' && 
                job.fax__Visit_Type__c == 'Preventative Maintenance') {
                
                InstallBase__c installBase = installBaseMap.get(job.Install_base__c);
                if (installBase != null) {
                    installBase.Last_PM_Date__c = job.fax__Completion_Date_Time__c.date();
                    installBase.Last_PM_Job__c =job.Name; 
                    system.debug(job.Name+ installBase.Last_PM_Job__c);
                    installBasesToUpdate.add(installBase);
                }
            }
        }

         if (!installBasesToUpdate.isEmpty()) {
            update installBasesToUpdate;
        }
    }
}
