======================================================================================================================================================================================================================*/
    public static void createChecklistItems(Set<Id> jobIds) {
        List<fax__Job__c> jobs = [SELECT Id, fax__Job_Type__c FROM fax__Job__c WHERE Id IN :jobIds ORDER BY CreatedDate ASC];
        createChecklistItemsForInsert(jobs);
    }
    
    public static List<fax__Job__c> createChecklistItemsForInsert(List<fax__Job__c> newJobs) {
        List<fax__Checklist_Item__c> checklistItems = new List<fax__Checklist_Item__c>();
        List<fax__Checklist__c> checklistsToInsert = new List<fax__Checklist__c>();
        Map<id,List<fax__Checklist_Item__c>> checklistByJobTypeId=new Map<id,List<fax__Checklist_Item__c>>();
        Set<Id> newJobTypeIds = new Set<Id>();
        for (fax__Job__c job : newJobs) {
            system.debug('JObid1'+job.id);
            system.debug('JObid2'+job.fax__Job_Type__c);
            
            if (job.fax__Job_Type__c != null) {
                newJobTypeIds.add(job.fax__Job_Type__c);
                system.debug('JObtype'+newJobTypeIds);    
                
            }
            
            
        }
        List<fax__Checklist_Item__c> temp;
        List<fax__Checklist_Item__c> checklistitem =[SELECT Id, fax__Item__c,Printout__c,Group_No__c, fax__Job_Type__c 
                                                     FROM fax__Checklist_Item__c 
                                                     WHERE fax__Job_Type__c IN :newJobTypeIds ORDER BY CreatedDate ASC];
        for (fax__Checklist_Item__c item :checklistitem)
        {
            if(checklistByJobTypeId.containskey(item.fax__Job_Type__c)){
                temp=checklistByJobTypeId.get(item.fax__Job_Type__c);    
                temp.add(item);
            }
            else{
                temp=new List<fax__Checklist_Item__c>{item};
                    checklistByJobTypeId.put(item.fax__Job_Type__c,temp);
            }
        } 
        system.debug('resultchecklist'+checklistitem);
        
        
        try{
            for (fax__Job__c job : newJobs) {                               
                if(checklistByJobTypeId.containskey(job.fax__Job_Type__c)) {
                    //List<fax__Checklist_Item__c> newChecklistItems = [SELECT Id, fax__Item__c,Printout__c,Group_No__c, fax__Job_Type__c FROM fax__Checklist_Item__c WHERE fax__Job_Type__c IN :newJobTypeIds ORDER BY CreatedDate ASC];
                    for (fax__Checklist_Item__c item : checklistByJobTypeId.get(job.fax__Job_Type__c)) 
                    { 
                        fax__Checklist__c checklst = new fax__Checklist__c();
                        checklst.fax__Job__c = job.ID;
                        checklst.fax__Item__c = item.fax__Item__c;
                        checklst.Printout__c = item.Printout__c;
                        checklst.Group_No__c = item.Group_No__c;
                        checklistsToInsert.add(checklst);      
                    }
                }
            }   
            if (!checklistsToInsert.isEmpty()) {
                FieldAXDBManager.insertCheckList(checklistsToInsert);
                system.debug('checklistsToInsert===>'+checklistsToInsert);
            }
        }
        catch(Exception e) { 
            System.debug('Exception: ' + e.getMessage() + '\n' + e.getStackTraceString());
        }
        return null;
    }
    
    public static List<fax__Job__c> PartsChecklistItemsForInsert(List<fax__Part_Consumed__c> PartsConsumed) {
        List<Inspection_Steps__c> checklistItems = new List<Inspection_Steps__c>();
        List<fax__Checklist__c> checklists = new List<fax__Checklist__c>();
        List<Id> newProductIds = new List<Id>();
        id partsconsumedId;
        id jobId;
        Decimal partCost = 0;
        Decimal partPrice = 0;  
        List<fax__job__c> JobListUpdate = new List<fax__job__c>();
        
        try{
            for (fax__Part_Consumed__c Pc : PartsConsumed) {
                if (Pc.Product_Id__c != null) {
                    newProductIds.add(Pc.Product_Id__c);
                    partsconsumedId = Pc.id;
                    jobId = Pc.fax__Job__c;
                }
                if(!newProductIds.isEmpty()){
                    List<Inspection_Steps__c> inspection = [SELECT Id,Name,Item__c,Part_Consumed__c, Product__c, Printout__c FROM Inspection_Steps__c WHERE Product__c IN  : newProductIds ORDER BY CreatedDate ASC];
                    if(inspection.size() > 0){
                        for (Inspection_Steps__c Isteps : inspection) {
                            fax__Checklist__c checklist = new fax__Checklist__c();
                            checklist.fax__Job__c = jobId;
                            checklist.fax__Item__c = Isteps.Item__c;
                            checklist.Part_Consumed__c = partsconsumedId;
                            checklist.Printout__c = Isteps.Printout__c;
                            checklists.add(checklist);        
                        }
                    }
                }
            }
            if (!checklists.isEmpty()) {
                FieldAXDBManager.insertpartchecklist(checklists);
            }
            
            // Update Part Cost and Price in Job Fields.
            List<AggregateResult> PartsConsumedResult = [SELECT SUM(Part_Cost__c) partCost, SUM(fax__Unit_Price__c) PartPrice FROM fax__Part_Consumed__c WHERE fax__Job__c = :jobID AND fax__Billable__c = true];
            
            IF(PartsConsumedResult[0].get('partCost') != null)
            {
                PartCost += (Decimal)PartsConsumedResult[0].get('partCost');
            }
            if(PartsConsumedResult[0].get('PartPrice') != null)
            {
                PartPrice += (Decimal)PartsConsumedResult[0].get('PartPrice');
            } 
            List<fax__job__c> jobRecords = [Select id,Name,Travel_cost__c,Travel_Price__c,Part_Cost__c,Parts_Price__c,Labor_Cost__c,Labor_Price__c From fax__job__c Where id =: JobId AND fax__Status__c != 'Completed'];
            For(fax__job__c job : jobRecords)
            {
                fax__job__c jobVar = new fax__job__c();
                jobVar.id = job.id;
                jobVar.Part_Cost__c = partCost;
                jobVar.Parts_Price__c = partPrice;
                JobListUpdate.add(jobVar);
            }
            if(JobListUpdate.size() > 0)
                FieldAxDBManager.UpdateDBValue(JobListUpdate);
        }
        catch(Exception e) 
        { 
            System.debug('Exception: ' + e.getMessage() + '\n' + e.getStackTraceString());
        }
        return null;
    }
    
    public static List<fax__Job__c> PartsChecklistItemsDelete(List<fax__Part_Consumed__c> PartsConsumed) {
        
        List<id> partsconsumedId = new list<id>();
        List<fax__Checklist__c> checklistdelete;
        System.debug('Parts Consumed List Values' + PartsConsumed);
        try{
            for(fax__Part_Consumed__c Pc : PartsConsumed){
                partsconsumedId.add(Pc.id);
            }
            checklistdelete = [SELECT Id, Name, Part_Consumed__c, fax__Job__c, Printout__c, Complete__c, Comments__c FROM fax__Checklist__c Where Part_Consumed__c =: partsconsumedId];
            if(checklistdelete.size() >0)
            {
                FieldAXDBManager.createChecklistItemsOnUpdate(checklistdelete);
            }
            
        }
        catch(Exception e){
            
            System.debug('Exception: ' + e.getMessage() + '\n' + e.getStackTraceString());
        }
        return Null;
    }
    public static List<fax__Job__c> updatePriceinJob(List<fax__Part_Consumed__c> PartsConsumed) {
        
        List<id> JobId = new List<id>();
        Decimal partCost = 0;
        Decimal partPrice = 0;  
        List<fax__job__c> JobListUpdate = new List<fax__job__c>();
        for(fax__Part_Consumed__c Pconsumed : PartsConsumed)
        {
            JobId.add(Pconsumed.fax__Job__c);
        }
        try
        {
            List<AggregateResult> PartsConsumedResult = [SELECT SUM(Part_Cost__c) partCost, SUM(fax__Unit_Price__c) PartPrice FROM fax__Part_Consumed__c WHERE fax__Job__c = :jobID AND  fax__Billable__c = true];
            
            IF(PartsConsumedResult[0].get('partCost') != null)
            {
                PartCost += (Decimal)PartsConsumedResult[0].get('partCost');
            }
            if(PartsConsumedResult[0].get('PartPrice') != null)
            {
                PartPrice += (Decimal)PartsConsumedResult[0].get('PartPrice');
            }
            
            List<fax__job__c> jobRecords = [Select id,Name,Travel_cost__c,Travel_Price__c,Part_Cost__c,Parts_Price__c,Labor_Cost__c,Labor_Price__c From fax__job__c Where id =: JobId AND fax__Status__c != 'Completed'];
            For(fax__job__c job : jobRecords)
            {
                fax__job__c jobVar = new fax__job__c();
                jobVar.id = job.id;
                jobVar.Part_Cost__c = partCost;
                jobVar.Parts_Price__c = partPrice;
                JobListUpdate.add(jobVar);
            }
            if(JobListUpdate.size() > 0)
                FieldAxDBManager.UpdateDBValue(JobListUpdate);
            
        }
        catch(Exception e){
            
            System.debug('Exception: ' + e.getMessage() + '\n' + e.getStackTraceString());
        }
        
        return null;
    } 
    
